{
  "include": ["packages/*/src"],
  "exclude": [
    "node_modules",
    "packages/*/esm/**/*",
    "packages/*/lib/**/*",
    "packages/*/cjs/**/*",
    "packages/style/src/color/plugins/*",
    "scripts/**/*"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@study/*": ["packages/*/src"]
    }
  }
}
